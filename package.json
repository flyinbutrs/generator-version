{
  "name": "generator-version-file",
  "version": "0.3.1",
  "description": "A Yeoman Generator for keeping a version file up to date",
  "main": "generators/app/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/flyinbutrs/generator-version-file.git"
  },
  "keywords": [
    "version",
    "yeoman-generator"
  ],
  "author": "Dan Rosenbloom <dan7348@gmail.com> (https://github.com/flyinbutrs/)",
  "email": "drosenbloom@logicworks.net",
  "license": "MIT",
  "scripts": {
    "test": "jest --coverage",
    "pretest": "eslint .",
    "release": "standard-version -a"
  },
  "homepage": "https://github.com/flyinbutrs/generator-version-file",
  "files": [
    "generators"
  ],
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "coveralls": "^3.0.6",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-config-xo": "^0.26.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^3.0.3",
    "jest": "^24.8.0",
    "lint-staged": "^9.2.1",
    "prettier": "^1.18.2",
    "standard-version": "^7.0.0",
    "yeoman-assert": "^3.1.1",
    "yeoman-test": "^2.0.0"
  },
  "engines": {
    "npm": ">= 4.0.0"
  },
  "dependencies": {
    "chalk": "^2.4.2",
    "lodash": "^4.17.15",
    "moment": "^2.24.0",
    "yeoman-generator": "^4.0.1",
    "yosay": "^2.0.2"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ],
    "*.py": [
      "pylint"
    ],
    "*.rb": [
      "rubocop --auto-correct",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": [
      "xo",
      "prettier"
    ],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": "error"
    },
    "plugins": [
      "prettier"
    ]
  },
  "bugs": {
    "url": "https://github.com/flyinbutrs/generator-version-file/issues"
  }
}
