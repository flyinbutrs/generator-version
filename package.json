{
  "name": "generator-version-file",
  "version": "0.2.1",
  "description": "A Yeoman Generator for keeping a version file up to date",
  "main": "generators/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/flyinbutrs/generator-version-file.git"
  },
  "keywords": [
    "version",
    "yeoman-generator"
  ],
  "author": "Dan Rosenbloom <dan7348@gmail.com> (https://github.com/flyinbutrs/)",
  "email": "drosenbloom@logicworks.net",
  "license": "MIT",
  "scripts": {
    "test": "jest --coverage",
    "pretest": "eslint .",
    "release": "standard-version -a"
  },
  "homepage": "https://github.com/flyinbutrs/generator-version-file",
  "files": [
    "generators"
  ],
  "devDependencies": {
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "coveralls": "^3.0.2",
    "eslint": "^5.15.1",
    "eslint-config-prettier": "^3.3.0",
    "eslint-config-xo": "^0.25.0",
    "eslint-plugin-prettier": "^3.0.0",
    "husky": "^1.3.1",
    "jest": "^23.5.0",
    "lint-staged": "^8.1.5",
    "prettier": "^1.11.1",
    "standard-version": "^6.0.1",
    "yeoman-assert": "^3.1.0",
    "yeoman-test": "^1.7.0"
  },
  "engines": {
    "npm": ">= 4.0.0"
  },
  "dependencies": {
    "chalk": "^2.1.0",
    "lodash": "^4.17.11",
    "moment": "^2.24.0",
    "yeoman-generator": "^2.0.1",
    "yosay": "^2.0.1"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ],
    "*.py": [
      "pylint"
    ],
    "*.rb": [
      "rubocop --auto-correct",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": [
      "xo",
      "prettier"
    ],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": "error"
    },
    "plugins": [
      "prettier"
    ]
  },
  "bugs": {
    "url": "https://github.com/flyinbutrs/generator-version-file/issues"
  }
}
